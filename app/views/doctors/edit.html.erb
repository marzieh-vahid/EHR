<% provide(:title, "Edit doctor profile") %> 
<h1>تغییر اطلاعات کاربری</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@doctor) do |f| %>
    
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :نام %>
      <%= f.text_field :name %>

      <%= f.label :نام_خانوادگی %>
      <%= f.text_field :family %>

      <%= f.label :ایمیل %>
      <%= f.text_field :email %>

      <%= f.label :رمزعبور %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "تایید رمز عبور" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "ثبت تغییرات", class: "btn btn-large " %>
    <% end %>

    <%= gravatar_for @doctor %>
    <a href="http://gravatar.com/emails">change</a>
  </div>
</div>